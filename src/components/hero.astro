---
import { Picture } from "@astrojs/image/components";
import heroImage from "assets/logo.jpg";
import Link from "@components/ui/link.astro";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      aspectRatio="1:1"
      sizes="(max-width: 800px) 100vw, 300px"
      loading="eager"
      class="rounded-lg border border-2 border-black"
      style={{ boxShadow: "5px 5px 0 black" }}
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-medium lg:tracking-tight xl:tracking-tighter">
      Marketing website done right.
    </h1>
    <p class="text-lg mt-4 max-w-xl">
      Built with Astro.build and TailwindCSS. You can quickly create any website
      with this.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href=""
        class="flex gap-1 items-center justify-center text-white font-bold border-yellow-600"
        rel="noopener">
        Get Started
      </Link>
      <Link
        rel="noopener"
        href="/about"
        style="bg-white"
        class="flex gap-1 items-center justify-center font-medium">
        View the Team
      </Link>
    </div>
  </div>
</main>
